<div class="form-group">
    <label for="title">title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">description</label>
   <textarea  name="description" id="description" cols="30" rows="5" class="form-control"> <%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">markdown</label>
   <textarea name="markdown" id="markdown" cols="30" rows="5" class="form-control"> <%= article.markdown %> </textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">cancel</a>
 <button type="submit" class="btn btn-primary">save</button>